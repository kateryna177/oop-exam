<Window x:Class="BruteForcePasswordReset.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Reset Brute Force" Height="450" Width="800">
    <Grid>
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" Width="200"/>
        <Button Content="Create Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,10,0,0" Width="150" Click="CreatePassword_Click"/>

        <Label Content="Encrypted Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <Label x:Name="EncryptedPasswordLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,30,0,0" Width="200"/>

        <Label Content="Max Threads:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="ThreadsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,70,0,0" Width="50"/>

        <Button Content="Start Brute Force" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,70,0,0" Width="150" Click="StartBruteForce_Click"/>

        <TextBlock x:Name="ProgressTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="760" Height="300" TextWrapping="Wrap" Text=""/>
    </Grid>
</Window>
